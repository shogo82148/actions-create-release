{
  "name": "actions-create-release",
  "version": "0.0.0",
  "private": true,
  "description": "Create a release for a tag in your repository",
  "main": "lib/index.js",
  "engines": {
    "node": "^20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build -o dist/create --source-map --license licenses.txt src/create.ts && ncc build -o dist/publish --source-map --license licenses.txt src/publish.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shogo82148/actions-create-release.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/http-client": "^2.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.2",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  }
}
